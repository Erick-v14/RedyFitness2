<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />


</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <img src="~/Content/icons/home.png" width="20" height="20" />&ensp;
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>&ensp;&ensp;&ensp;
                    <li>
                        <img src="~/Content/icons/history.png" height="20" width="20" />&ensp;
                        @Html.ActionLink("History", "History", "Home")
                    </li>&ensp;&ensp;&ensp;
                    <li>
                        <img src="~/Content/icons/dumbbell.png" width="20" height="20" />&ensp;
                        @Html.ActionLink("Workout", "Workout", "Home")
                    </li>&ensp;&ensp;&ensp;
                    <li>
                        <img src="~/Content/icons/userpro2.png" width="20" height="20" />&ensp;
                        @Html.ActionLink("My Profile", "myProfile", "Home")
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>

    </nav>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Redy Fitness inc. </p>
                @Html.ActionLink("Contact", "Contact", "Home")
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
